AuthType Basic
AuthName "Project Name Staging - Authentication Required"
AuthUserFile /srv/users/serverpilot/apps/projectname/public/.htpasswd
Require valid-user

# Craft - remove index.php from URLs

<IfModule mod_rewrite.c>

        RewriteEngine On

        # Send would-be 404 requests to Craft
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteCond %{REQUEST_FILENAME} !-d
        RewriteCond %{REQUEST_URI} !^/(favicon\.ico|apple-touch-icon.*\.png)$ [NC]
        RewriteRule (.+) index.php?p=$1 [QSA,L]

</IfModule>


